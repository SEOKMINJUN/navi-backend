							"pm.test(\"상태 코드가 201인지 확인\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"pm.test(\"회원가입 성공 메시지 확인\", function () {",
							"    var jsonData = pm.response.json();",
