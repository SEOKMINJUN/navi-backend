						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"testpass123\",\n    \"email\": \"test@example.com\",\n    \"student_id\": \"20240001\",\n    \"nickname\": \"테스트유저\"\n}"
